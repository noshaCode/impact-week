<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questions Impact</title>

</head>
<body>

    <a href="/signup">Sign Up</a>
    <a href="/login">Login</a>

    <a href="/new/question">Add a question</a>

    <div class="container">
    
        <% questions.forEach(function(item) { %>
            <h3><a href="/question/<%=item.id%>"> <%= item.question %> </a></h3>
            <p><%= item.description %></p>
            <p><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'numeric', day: '2-digit'}).format(new Date(item.updatedAt)) %></p>

            
            <a href="/new/answer">Add Answer</a>

            
        <% }); %>
    </div>

        
   

</body>
</html>