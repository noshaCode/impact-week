<%- include('./components/header') %>
    <%- include('./components/top') %>

            <div class="container">
                <div>
                    <% if (user) { %>
                        Welcome, <%= user.name %>
                      <% } %>
                    </div>
                <div>
                    <a href="/new/question" class="btn btn-primary">Add a question</a>
                </div>
                <br>
            
                <div class="row" >
                
                    <% questions.forEach(function(item) { %>
                        <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                        <h3 class="card-title"><a href="/question/<%=item.id%>"> <%= item.question %> </a></h3>
                        <p class="card-text"><%= item.description %></p>
                        <p><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'numeric', day: '2-digit'}).format(new Date(item.updatedAt)) %></p>
            
                        
                       
                    </div>
                </div>
            </div>
                    <% }); %>
            
                    
                  
                </div>
            </div>
    

    <%- include('./components/bottom') %>
    <%- include('./components/footer') %>